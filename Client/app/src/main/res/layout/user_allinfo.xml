<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/public_head"/>
<RelativeLayout
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/ava_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="头像"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/camera"
        />
    <ImageView
        android:src="@drawable/jiantou"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/avatar"/>
    </LinearLayout>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#979393"/>
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="test"
                />
            <ImageView
                android:src="@drawable/jiantou"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/username"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#979393"/>
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="暂未设置"
                />
            <ImageView
                android:src="@drawable/jiantou"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/sex"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#D6D5D5"/>
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/birth_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/birth"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="暂未设置"
                />
            <ImageView
                android:src="@drawable/jiantou"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/birth"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#979393"/>
    <RelativeLayout
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/local_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地区"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/local"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="暂未设置"
            />
        <ImageView
            android:src="@drawable/jiantou"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/birth"/>
    </LinearLayout>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#979393"/>
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="暂未设置"
                />
            <ImageView
                android:src="@drawable/jiantou"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/sign"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#979393"/>
    <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="简介"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#979393"/>
    <EditText
        android:id="@+id/introduce"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="请输入个人介绍..."
        android:gravity="left|top"
        android:background="@null"/>
</LinearLayout>
